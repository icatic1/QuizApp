<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_marginEnd="8dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/donja_boja">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kviz_status"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="end"
                />

            <TextView
                android:id="@+id/kviz_predmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:padding="5dp"
                android:textSize="15sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/gornja_boja"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingHorizontal="7dp">

                <TextView
                    android:id="@+id/kviz_naziv"

                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/kviz_datum"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/kviz_trajanje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                         />

                    <TextView
                        android:id="@+id/textViewprazan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7" />

                    <TextView
                        android:id="@+id/kviz_bodovi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
</androidx.cardview.widget.CardView>